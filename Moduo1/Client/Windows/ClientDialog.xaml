<Window x:Class="Client.ClientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personal space" Height="400" Width="800" Background="DimGray" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="550"/>
            
        </Grid.ColumnDefinitions>
        <Button Name="showProjBtn" Grid.Row="1" Grid.Column="0" Style="{StaticResource StyleButton}" Margin="2,1,43,2" Command="{Binding ViewProjectsCommand}" Height="Auto" Width="Auto" >
            <Button.Template>
                <ControlTemplate>
                    <Border Style="{StaticResource StyleButtonBorder}">
                        <TextBlock Text="Prikaži projekte" Style="{StaticResource StyleButtonText}" Margin="56,4,10,-14" Width="134">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Name="showEmployBtn" Grid.Row="2" Grid.Column="0" Style="{StaticResource StyleButton}"  Margin="2,2,43,1" Command="{Binding ViewWorkersCommand}" Height="Auto" Width="Auto">
            <Button.Template>
                <ControlTemplate>
                    <Border Style="{StaticResource StyleButtonBorder}">
                        <TextBlock Text="Prikaži zaposlene" Style="{StaticResource StyleButtonText}" Margin="49,4,17,-14" Width="134">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Name="addEmployBtn" Grid.Row="3" Grid.Column="0" Style="{StaticResource StyleButton}"  Margin="2,1,43,2" Command="{Binding AddEmployeeCommand}" Height="Auto" Width="Auto" >
            <Button.Template>
                <ControlTemplate>
                    <Border Style="{StaticResource StyleButtonBorder}">
                        <TextBlock Text="Dodaj novog zaposlenog" Style="{StaticResource StyleButtonText}" Margin="26,4,19,-14" Width="155">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Name="editYDBtn" Grid.Row="4" Grid.Column="0" Style="{StaticResource StyleButton}"  Margin="2,2,43,1" Command="{Binding EditPersonalDataCommand}" Height="Auto" Width="Auto">
            <Button.Template>
                <ControlTemplate>
                    <Border Style="{StaticResource StyleButtonBorder}">
                        <TextBlock Text="Izmena ličnih stavki" Style="{StaticResource StyleButtonText}" Margin="39,4,6,-14" Width="155">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Name="timeTableBtn" Grid.Row="5" Grid.Column="0" Style="{StaticResource StyleButton}" Margin="2,1,43,2" Command="{Binding WorkingHoursCommand}" Height="Auto" Width="Auto" >
            <Button.Template>
                <ControlTemplate>
                    <Border Style="{StaticResource StyleButtonBorder}">
                        <TextBlock Text="Definiši radno vreme" Style="{StaticResource StyleButtonText}" Margin="39,4,6,-14" Width="155">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Name="passChngBtn" Grid.Row="6" Grid.Column="0" Style="{StaticResource StyleButton}"  Margin="2,2,43,1" Command="{Binding ChangePasswordCommand}" Height="Auto" Width="Auto">
            <Button.Template>
                <ControlTemplate>
                    <Border Style="{StaticResource StyleButtonBorder}">
                        <TextBlock Text="Promeni lozinku" Style="{StaticResource StyleButtonText}" Margin="51,4,-6,-14" Width="155">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Name="sendReqBtn" Grid.Row="7" Grid.Column="0" Style="{StaticResource StyleButton}"  Margin="2,1,43,2" Command="{Binding SendRequestCommand}" Height="Auto" Width="Auto">
            <Button.Template>
                <ControlTemplate>
                    <Border Style="{StaticResource StyleButtonBorder}">
                        <TextBlock Text="Slanje zahteva" Style="{StaticResource StyleButtonText}" Margin="51,4,-6,-14" Width="155">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
